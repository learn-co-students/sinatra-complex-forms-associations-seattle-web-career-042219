<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br>

  <p><input id="pet_name" type="text" name="pet[name]"></p>

  <br>

  <label>Choose an existing owner:</label>

  <br>

  <p><%@owners.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%></p>

  <br>

  <label>and/or, create a new owner:</label>

    <br>

    <label>name:</label>

      <input id="owner_name" type="text" name="owner[name]"></input>
    <br>

  <input type="submit" value="Create Pet">
</form>
