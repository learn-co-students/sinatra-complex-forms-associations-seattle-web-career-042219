<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>
  <br>

  <input type="text" name="pet_name">

  <br>
  <label> Choose an existing owner: </label>
  <br>

  <!-- <select class="" name=""> -->

  <%@owners.each do |o|%>
      <input type="checkbox" name="owner_id" value="<%=o.id%>" id="<%=o.id%>"><%=o.name%></input>
  <%end%>

<!-- </select> -->

  <br>
  <label>and/or, create a new owner:</label>
  <br>
<label>Name:</label>
  <input type="text" name="owner_name"></input>

  <input type="submit" value="Create Pet">
</form>
