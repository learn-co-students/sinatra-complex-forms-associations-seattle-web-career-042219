<h1>Update Pet</h1>
<br>
<form class="" action="/pets/<%=@pet.id%>" method="post">
  <label for="">Name:</label>
  <input type="text" name="pet_name" value="<%= @pet.name %>">
  <br>

  <label>Choose an existing Owner:</label>
  <br>
  <%@owners.each do |owner|%>
    <input type="radio" name="owner_id"  id="<%= owner.id %>" value="<%= owner.id%>" <%= 'checked' if @pet.owner == owner%>><%= owner.name %></input>
  <% end %>
  <br>
  <label>and/or create new Owner:</label>
  <br>
  <label>name:</label>
  <br>
  <input type="text" name="owner[name]" value="" id="owner_name">
  <br>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="submit" name="submit" value="Update Pet">
</form>
