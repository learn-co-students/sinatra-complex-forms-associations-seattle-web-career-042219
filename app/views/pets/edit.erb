<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label for="pet_name">Name:</label><br>
  <input type="text" name="pet_name" id="pet_name" value="<%= @pet.name %>"><br><br>
  <label>Choose an existing owner:</label><br>
  <%@owners.each do |owner|%>
    <input type="radio" name="owner_id" id="<%= owner.id %>" value="<%= owner.id %>" 
    	<%='checked' if @pet.owner == owner %>><%=owner.name%></
    </input>
  <%end%><br>
  <label>Create a new owner:</label><br>
  <label for="owner_name">name: </label>
  <input type="text" name="owner_name" id="owner[name]"></input><br>
  <input type="submit" value="Update Pet">
</form>
