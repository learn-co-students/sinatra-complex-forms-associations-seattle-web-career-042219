<h1>Create a New Owner</h1>

<form action="/owners" method="POST">
  <label for="owner_name">Name:</label><br>
  <input type="text" name="owner[name]" id="owner_name"><br><br>
  <label>Choose an Existing Pet: </label><br>
  <% @pets.each do |pet| %>
      <input type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" id="<%= pet.id %>">
      	<%= pet.name %>
      </input>
  <% end %><br>
  <label for="pet_name">create a new pet:</label><br>
  <input type="text" name="pet[name]" id="pet_name"><br>
  <input type="submit" value="Create Owner">
</form>
